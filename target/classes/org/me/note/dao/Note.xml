<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="org.me.note.dao.INoteDao">

	<insert id="save" parameterType="Note">
		insert into mem_note(strId,strTitle,strLoginId,tNote,nState,dtTime)
		values(#{strId},#{strTitle},#{strLoginId},#{tNote},#{nState},now())
	</insert>
	
	<!-- get -->
	<select id="get" parameterType="HashMap" resultType="Note">
		select * from mem_note where strId=#{strId}
	</select>
	
	<!-- 根据条件查询 -->
	<select id="getByRange" parameterType="HashMap" resultType="java.util.HashMap">
		select * from mem_note
		<where>
			<if test="strId != null">
				strId=#{strId}
			</if>
			<if test="strTitle != null">
				strTitle like '%#{strTitle}%'
			</if>
			<if test="strLoginId != null">
				strLoginId=#{strLoginId}
			</if>
			<if test="nState!=null">
				nState=#{nState}
			</if>
			<if test="dtTimeMin!=null">
				dtTime &gt; #{dtTimeMin}
			</if>
			<if test="dtTimeMax!=null">
				dtTime &lt; #{dtTimeMax}
			</if>
		</where>
		<choose>
			<when test="order!=null">
				order by #{order}
			</when>
			<otherwise>
				order by dtTime desc
			</otherwise>
		</choose>
	</select>
</mapper>